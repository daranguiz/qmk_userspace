/*
 * Dario's Custom ZMK Behaviors
 *
 * Home row mods with balanced flavor and hold-trigger-on-release
 * These behaviors are included in all generated keymaps
 */

&lt {
    tapping-term-ms = <200>;
    quick-tap-ms = <200>;
    flavor = "balanced";
};

&mt {
    tapping-term-ms = <200>;
    quick-tap-ms = <200>;
    flavor = "balanced";
};

/ {
    behaviors {
        hml: home_row_mod_left {
            compatible = "zmk,behavior-hold-tap";
            label = "HOME_ROW_MOD_LEFT";
            #binding-cells = <2>;
            flavor = "balanced";
            require-prior-idle-ms = <150>;
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            bindings = <&kp>, <&kp>;
            hold-trigger-key-positions = <6 7 8 9 10 11 18 19 20 21 22 23 30 31 32 33 34 35 39 40 41>;  // right hand + thumbs
            hold-trigger-on-release;
        };

        hmr: home_row_mod_right {
            compatible = "zmk,behavior-hold-tap";
            label = "HOME_ROW_MOD_RIGHT";
            #binding-cells = <2>;
            flavor = "balanced";
            require-prior-idle-ms = <150>;
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            bindings = <&kp>, <&kp>;
            hold-trigger-key-positions = <0 1 2 3 4 5 12 13 14 15 16 17 24 25 26 27 28 29 36 37 38>;  // left hand + thumbs
            hold-trigger-on-release;
        };
    };

    macros {
        github_url: github_url_macro {
            compatible = "zmk,behavior-macro";
            label = "GITHUB_URL";
            #binding-cells = <0>;
            bindings
                = <&macro_wait_time 10>  // add per-key spacing so long macros don't get dropped
                , <&macro_tap_time 10>
                , <&macro_tap &kp H &kp T &kp T &kp P &kp S &kp COLON &kp FSLH &kp FSLH &kp G &kp I>
                , <&macro_tap &kp T &kp H &kp U &kp B &kp DOT &kp C &kp O &kp M &kp FSLH &kp D>
                , <&macro_tap &kp A &kp R &kp A &kp N &kp G &kp U &kp I &kp Z &kp FSLH &kp K>
                , <&macro_tap &kp E &kp Y &kp B &kp O &kp A &kp R &kp D &kp MINUS &kp C &kp O>
                , <&macro_tap &kp N &kp F &kp I &kp G &kp QMARK &kp T &kp A &kp B &kp EQUAL &kp R>
                , <&macro_tap &kp E &kp A &kp D &kp M &kp E &kp MINUS &kp O &kp V &kp MINUS &kp F>
                , <&macro_tap &kp I &kp L &kp E &kp HASH &kp R &kp E &kp A &kp D &kp M &kp E>
                ;
        };
    };
};
